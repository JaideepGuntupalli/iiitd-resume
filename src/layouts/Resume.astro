---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<title>{title}</title>
		<link rel="icon" type="image/png" sizes="32x32" href="favicon.png" />
		<link
			type="text/css"
			media="screen"
			rel="stylesheet"
			href="/styles/iiitd.css"
		/>
		<link
			type="text/css"
			media="print"
			rel="stylesheet"
			href="/styles/iiitd.css"
		/>
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/normalize/7.0.0/normalize.min.css"
		/>
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/paper-css/0.4.1/paper.css"
		/>
		<script
			src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"
		></script>
		<script
			src="https://cdnjs.cloudflare.com/ajax/libs/js-yaml/4.1.0/js-yaml.min.js"
		></script>
	</head>

	<body class="A4">
		<slot />
	</body>
</html>

<style is:global>
	@page {
		size: A4;
	}
	html {
		font-family: system-ui, Inter;
		/* background-color: #ff0000; */
	}
</style>
